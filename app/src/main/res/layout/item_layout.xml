<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/vk_clear_shape" />

    <TextView
        android:id="@+id/nameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imgItem"
        android:layout_toRightOf="@+id/imgItem"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/qtyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameItem"
        android:layout_alignStart="@+id/nameItem"
        android:layout_below="@+id/nameItem"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/priceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qtyItem"
        android:layout_alignBottom="@+id/qtyItem"
        android:layout_toEndOf="@+id/qtyItem"
        android:layout_toRightOf="@+id/qtyItem"
        android:text="TextView"
        android:textSize="10sp" />
</RelativeLayout>